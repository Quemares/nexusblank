<form class="{{cssClass}}" autocomplete="off">

    <header class="sheet-header">
        <div>{{localize "nexus.title.system"}}</div>
        <h1>NEXUS</h1>
        <div>{{{localize "nexus.title.directory"}}}</div>
    </header>

    <div class="sheet-content">

        <div class="sheet-left">
            
            <div class="sheet-attributes-box">
                <h2>{{localize "nexus.sheet.attributes.name"}}</h2>
                <div class="sheet-attributes-stats">
                <table>
                    <tr>
                        <td>
                            {{localize "nexus.sheet.attributes.charisma"}}
                            <input type="text" name="system.attributes.charisma"  value="{{system.attributes.charisma}}" data-dtype="Number"/>
                        </td>
                        <td>
                            {{localize "nexus.sheet.attributes.bravery"}}
                            <input type="text" name="system.attributes.bravery"  value="{{system.attributes.bravery}}" data-dtype="Number"/>
                        </td>
                        </td>
                        <td>
                            {{localize "nexus.sheet.attributes.dexterity"}}
                            <input type="text" name="system.attributes.dexterity"  value="{{system.attributes.dexterity}}" data-dtype="Number"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="attribute-strength">
                            {{localize "nexus.sheet.attributes.strength"}}
                            <input type="text" name="system.attributes.strength"  value="{{system.attributes.strength}}" data-dtype="Number"/>
                        </td>
                        <td>
                            {{localize "nexus.sheet.attributes.intellect"}}
                            <input type="text" name="system.attributes.intellect"  value="{{system.attributes.intellect}}" data-dtype="Number"/>
                        </td>
                    </tr>
                </table>
                </div>
            </div>
            
            <div class="sheet-skills-box">
                <h2>{{localize "nexus.sheet.skills.name"}}</h2>
                <div class="sheet-skills-stats">
                    <section class="sheet-skills-stats-general">
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.coverfire"}}</div>
                            <input class="value" type="text" name="system.skills.coverfire"  value="{{system.skills.coverfire}}" data-dtype="Number"/>
                        </div>
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.brawling"}}</div>
                            <input class="value" type="text" name="system.skills.brawling"  value="{{system.skills.brawling}}" data-dtype="Number"/>
                        </div>
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.hacking"}}</div> 
                            <input class="value" type="text" name="system.skills.hacking"  value="{{system.skills.hacking}}" data-dtype="Number"/>
                        </div>
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.xenotech"}}</div>
                            <input class="value" type="text" name="system.skills.xenotech"  value="{{system.skills.xenotech}}" data-dtype="Number"/>
                        </div>
                    </section>
                    <section class="sheet-skills-stats-specific">
                        <h3>{{localize "nexus.sheet.skills.specific"}}</h3>
                    {{#if (eq actor.type "commando")}}
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.camouflage"}}</div> 
                            <input class="value" type="text" name="system.skills.camouflage"  value="{{system.skills.camouflage}}" data-dtype="Number"/>
                        </div>
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.sapper"}}</div>
                            <input class="value" type="text" name="system.skills.sapper"  value="{{system.skills.sapper}}" data-dtype="Number"/>
                        </div>
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.medicine"}}</div>  
                            <input class="value" type="text" name="system.skills.medicine"  value="{{system.skills.medicine}}" data-dtype="Number"/>
                        </div> 
                    {{/if}}
                    {{#if (eq actor.type "technologist")}}
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.cybernetics"}}</div>
                            <input class="value" type="text" name="system.skills.cybernetics"  value="{{system.skills.cybernetics}}" data-dtype="Number"/>
                        </div>           
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.geology"}}</div>
                            <input class="value" type="text" name="system.skills.geology"  value="{{system.skills.geology}}" data-dtype="Number"/>
                        </div>
                        <div class="skill">
                            <div>{{localize "nexus.sheet.skills.mechanics"}}</div>  
                            <input class="value" type="text" name="system.skills.mechanics"  value="{{system.skills.mechanics}}" data-dtype="Number"/>
                        </div>
                    {{/if}}
                    </section> 
                 </div>
            </div>

            <div class="sheet-advantages">
                <h2>{{localize "nexus.sheet.advantage.name"}}</h2>
                <div class="sheet-advantages-lists">
                {{#each advantage as |advantage id|}}
                    {{> "systems/nexusblank/templates/partials/advantage-card.hbs" advantage}}
                {{/each}}
                </div>
            </div>

            <div class="sheet-implants">
                <h2>{{localize "nexus.sheet.implant.name"}}</h2>
                <div class="sheet-implants-lists">
                {{#each implant as |implant id|}}
                    {{> "systems/nexusblank/templates/partials/implant-card.hbs" implant}}
                {{/each}}
                </div>
            </div>

            <div class="sheet-conviction">
                <h2>{{localize "nexus.sheet.conviction"}}</h2>
                <div class="editor">
                {{editor enrichedConviction target="system.conviction" engine="prosemirror" button=true owner=owner editable=editable}}
                </div>
            </div>

        </div>

        <div class="sheet-right">

            <div class="sheet-main">
                <h2>{{localize "nexus.sheet.characteristics"}}</h2>
                <div class="sheet-header-box">
                    <div class="generic-name">{{localize "nexus.sheet.name"}}:</div>
                    <input class="actor-name" type="text" name="name" value="{{actor.name}}" data-dtype="String"/>
                </div>
                <div class="sheet-main-box">
                    <div class="sheet-rank-box">
                        <div class="generic-rank">{{localize "nexus.sheet.rank"}}:</div>
                        <input class="actor-rank" type="text" name="system.rank" value="{{system.rank}}" data-dtype="Number"/>
                    </div>
                    <div class="sheet-humanity-box">
                        <div>
                            {{localize "nexus.sheet.humanity-coldness"}}:
                            <input type="text" name="system.humanity-coldness" value="{{system.humanity-coldness}}" data-dtype="Number"/>
                        </div>
                        <div>
                            {{localize "nexus.sheet.duty-rebellious"}}:
                            <input type="text" name="system.duty-rebellious" value="{{system.duty-rebellious}}" data-dtype="Number"/>
                        </div>
                        <div>
                            {{localize "nexus.sheet.merit"}}:
                            <input type="text" name="system.merit" value="{{system.merit}}" data-dtype="Number"/>
                        </div>
                        <div>
                            TRN:
                            <input type="text" name="system.trn" value="{{system.trn}}" data-dtype="Number"/>
                        </div>
                    </div>
                    <div class="sheet-image-health-box">
                        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="75%" width="100%"/>
                        <div class="health-box">
                            <div class="generic-health">{{localize "nexus.sheet.health"}}:</div>
                            <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
                            <div class="max-health">/ {{system.health.max}}</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="sheet-weapons">
                <h2>{{localize "nexus.sheet.weapon.name"}}</h2>
                <div class="sheet-weapons-lists">
                {{#each weapon as |weapon id|}}
                    {{> "systems/nexusblank/templates/partials/weapon-card.hbs" weapon}}
                {{/each}}
                </div>
            </div>

            <div class="sheet-other">

                <div class="sheet-armor">
                    <h2>{{localize "nexus.sheet.armor.name"}}</h2>
                    <div class="sheet-armor-lists">
                    {{#each armor as |armor id|}}
                        {{> "systems/nexusblank/templates/partials/armor-card.hbs" armor}}
                    {{/each}}
                    </div>
                </div>

                <div class="sheet-inventory">
                    <h2>{{localize "nexus.sheet.inventory"}}</h2>
                    <div class="editor">
                    {{editor enrichedInventory target="system.conviction" engine="prosemirror" button=true owner=owner editable=editable}}
                    </div>
                    </div>
            </div>

        </div>

    </div>
</form>