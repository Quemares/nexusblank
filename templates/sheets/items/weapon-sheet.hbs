<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    <div class="sheet-content">
        <table>
            <tr>
                <th>{{localize "nexus.weapon.range"}}</th>
                <th>{{localize "nexus.weapon.rate"}}</th>
                <th>{{localize "nexus.weapon.potency"}}</th>
                <th>{{localize "nexus.weapon.damage"}}</th>
                <th>{{localize "nexus.weapon.ammo"}}</th>
            </tr>
            <tr>
                <td>
                    <input type="text" name="system.range"  value="{{system.range}}" data-dtype="Number"/>
                </td>
                <td>
                    <input type="text" name="system.rate"  value="{{system.rate}}" data-dtype="Number"/>
                </td>
                <td>
                    <input type="text" name="system.potency"  value="{{system.potency}}" data-dtype="Number"/>
                </td>
                <td>
                    <input type="text" name="system.damage"  value="{{system.damage}}" data-dtype="Number"/>
                </td>
                <td>
                    <input type="text" name="system.ammo.max"  value="{{system.ammo.max}}" data-dtype="Number"/>
                </td>
            </tr>
        </table>
        <div class="editor">
        {{editor enrichedDescription target="system.description" engine="prosemirror" button=true owner=owner editable=editable}}
        </div>
    </div>
</form>
